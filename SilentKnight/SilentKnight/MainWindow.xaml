<Window x:Class="SilentKnight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilentKnight"
        mc:Ignorable="d"
        Title="Silent Knight" Height="800" Width="1440" MinHeight="500" MinWidth="855" Loaded="Windows_Loaded" KeyUp="btnKeyUp" MouseLeftButtonDown="MouseButton_Down">
    <Canvas x:Name="mainWindowCanvas">
        <StackPanel Background="#FF7B9191" Height="759">
            <Image Source="/Assets/TitleScreenName.png" Height="100" Canvas.Left="302" Canvas.Top="74" Width="1428" RenderTransformOrigin="0.48,1.59"/>
            <Button Content="New Game" Canvas.Left="596" Canvas.Top="258" Width="312" Click="Button_Click_GameScreen" Height="65" FontSize="48" FontFamily="Tempus Sans ITC" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        </StackPanel>
        <Frame x:Name="Main" Margin="0" Height="800" Width="1440" RenderTransformOrigin="1.116,0.536"></Frame>

    </Canvas>
</Window>
