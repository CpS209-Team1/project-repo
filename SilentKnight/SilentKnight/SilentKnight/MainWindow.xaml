<Window x:Class="SilentKnight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilentKnight"
        mc:Ignorable="d"
        Title="Silent Knight" Height="350" Width="525" Loaded="Windows_Loaded" MouseLeftButtonDown="Plr_MouseLeftButtonDown">
    <Canvas x:Name="canvas">
        <Image x:Name="Plr" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50"  Source="/Assets/knight.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <RotateTransform x:Name="ImageRotation" />
            </Image.RenderTransform>
        </Image>
    </Canvas>
</Window>
